{
  "swagger": "2.0",
  "info": {
    "title": "Temples API",
    "description": "CSE 341 Lesson 04 Team Activity",
    "version": "1.0.0"
  },
  "host": "localhost:8081",
  "basePath": "/",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],

  "securityDefinitions": {
    "ApiKeyAuth": {
      "type": "apiKey",
      "name": "apiKey",
      "in": "header"
    }
  },

  "definitions": {
    "Temple": {
      "type": "object",
      "properties": {
        "temple_id": { "type": "integer", "example": 300 },
        "name": { "type": "string", "example": "Salt Lake Temple" },
        "location": { "type": "string", "example": "Salt Lake City, Utah, United States" },
        "dedicated": { "type": "string", "example": "6 April 1893" },
        "additionalInfo": { "type": "boolean", "example": false }
      },
      "required": ["temple_id", "name", "location", "dedicated", "additionalInfo"]
    }
  },

  "paths": {
    "/temples": {
      "get": {
        "summary": "Get all temples",
        "security": [{ "ApiKeyAuth": [] }],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "array",
              "items": { "$ref": "#/definitions/Temple" }
            }
          },
          "401": { "description": "Unauthorized / Invalid apiKey" }
        }
      },

      "post": {
        "summary": "Create a new temple",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": { "$ref": "#/definitions/Temple" }
          }
        ],
        "responses": {
          "201": { "description": "Created" },
          "400": { "description": "Bad Request" },
          "401": { "description": "Unauthorized / Invalid apiKey" }
        }
      }
    },

    "/temples/{temple_id}": {
      "get": {
        "summary": "Get one temple by id",
        "security": [{ "ApiKeyAuth": [] }],
        "parameters": [
          {
            "name": "temple_id",
            "in": "path",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": { "$ref": "#/definitions/Temple" }
          },
          "401": { "description": "Unauthorized / Invalid apiKey" },
          "404": { "description": "Not Found" }
        }
      }
    }
  }
}

